doctype html
html
  head
    title Add customer
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    h1 New customer
    form(action='/addcustomer', method='POST')
      .form-group
          label(for='firstname1') firstname
          input#firstname1.form-control(type='text', name="firstname")
      .form-group
          label(for='lastname') lastname
          input#lastname1.form-control(type='text', name="lastname")
      .form-group
        label(for=email1) email
        input#email1.form-control(type="text", name="email")
        .form-group
        label(for='phone') phone
        input#phone1.form-control(type='text', name="phone")
        input(type="submit", value="Add", class="btn btn-primary")